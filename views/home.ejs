<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
      /* Make page full height and use flex column */
      html, body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* Content expands to push footer to bottom */
      .content {
        flex: 1;
      }

      /* Blog cards container */
      .container {
        max-width: 1200px;
      }

      .card img {
        max-height: 180px;
        object-fit: cover;
      }

      /* Responsive row spacing */
      .row {
        gap: 20px;
      }

    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="content">
      <div class="container mt-3">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
          <% blogs.forEach(blog => { %>
          <div class="col mb-4">
            <div class="card h-100">
              <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover" />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= blog.title %></h5>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
    <%- include('./partials/footer') %>
  </body>
</html>
